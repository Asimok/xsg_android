<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mainFunctions.releaseRequirements">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="#E403A9F4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_margin="@dimen/dp_12"
            android:onClick="selectad"
            android:text="点击选择所属地区"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/shi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12"
            android:onClick="selectad"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/xian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12"
            android:onClick="selectad"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/changead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/dp_12"
            android:onClick="selectad"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textColor="#F1E3E3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:id="@+id/detailad"
            android:background="#BA6AD86D"
            android:hint="请输入详细地址"/>
    </LinearLayout>
    <LinearLayout
        android:background="#FF9800"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="姓名："
        android:textSize="18sp" />
        <EditText
            android:textColor="#01635A"
            android:layout_marginLeft="10dp"
            android:id="@+id/user"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            >
        </EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="联系方式："
            android:textSize="18sp" />
        <EditText
            android:textColor="#01635A"
            android:layout_marginLeft="10dp"
            android:id="@+id/telephone"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
                android:layout_margin="30dp"
            android:text="书籍类别："/>
        <Spinner
                android:layout_margin="30dp"
            android:id="@+id/bookclass"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:entries="@array/bookclass">
    </Spinner>
    </LinearLayout>

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="书籍数量："
            android:textSize="18sp" />

        <EditText
            android:id="@+id/booknum"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"></EditText>

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="本"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="读者年龄："
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/suitage"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:entries="@array/suitage"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_margin="30dp"
            android:text="书籍名称："
            android:textSize="18sp" />
        <EditText
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/bookname"
            android:layout_width="@dimen/dp_130"
            android:layout_height="wrap_content"
            >
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:textColor="#F1E3E3"
            android:background="#BA4CAF50"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:id="@+id/detailbook"
            android:hint="书籍详细信息"/>
    </LinearLayout>
    <RelativeLayout
     android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/fabu"
            android:layout_marginTop="10dp"
            android:background="@drawable/fabu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="publish"/>
        <TextView
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/fabu"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="发布"/>
    </RelativeLayout>

</LinearLayout>
</ScrollView>